
<section class="site-section" id="section-contact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class=" mb-5 heading">Contact</h2>

                @using (Html.BeginForm())
                {


                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="" for="fname">First Name</label>
                            <input type="text" name="ad" id="fname" class="form-control">
                        </div>
                        
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="" for="email">Email</label>
                            <input type="email" name="mail" id="email" class="form-control">
                        </div>
                    </div>

                    

                    <div class="row form-group mb-5">
                        <div class="col-md-12">
                            <label class="" for="message">Message</label>
                            <textarea name="icerik"  id="message" cols="30" rows="7" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Send Message" class="btn btn-primary btn-md">
                        </div>
                    </div>

                }
                
            </div>
        </div>
    </div>
</section>